doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet', href='/stylesheets/login.css')
        link(	rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
            integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
            crossorigin="anonymous"
            referrerpolicy="no-referrer")

        title Log in
    body 
        section(class="login")
            div(class="container")
                h1(class="title") Welcome Solar Tracking
                p(class="desc") Enter your credentials to access your account
                form(action="/login" method="post")
                    div(class="input-group")
                        i(class="fa fa-user")
                        input(type="text", name="username", placeholder="Vd: admin" )
                    div(class="input-group")
                        i(class="fa fa-lock")
                        input(type="password", name="password", placeholder="Password" )
                    button(class="btn-login" type='submit') Log in
                    if message
                        p(class='messageWrong')= message